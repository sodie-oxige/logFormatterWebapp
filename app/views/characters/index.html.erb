<h1><%= t '.title' %></h1>

<%= button_to t('characters.new.title'), new_character_path, method: :get %>

<div class="xflex gap">

    <div>
        <h2><%= t 'activerecord.models.pc' %></h2>
        <table>
            <tr>
                <th>
                    <%= t 'activerecord.attributes.pc.name' %>
                </th>
                <th>
                    <%= t 'activerecord.attributes.pc.pl' %>
                </th>
                <th></th>
            </tr>
            <% @pc.each do |pc| %>
                <tr data-url="<%= character_path(pc.id) %>">
                    <td>
                        <%= pc.name %>
                    </td>
                    <td>
                        <%= pc.pl_name %>
                    </td>
                    <td>
                        <%= link_to edit_character_path(pc.id) do %>
                            <i class="bi bi-vector-pen"></i>
                        <% end %>
                    </td>
                </tr>
            <% end %>
        </table>
    </div>

    <div>
        <h2><%= t 'activerecord.models.npc' %></h2>
        <table>
            <tr>
                <th>
                    <%= t 'activerecord.attributes.npc.name' %>
                </th>
                <th>
                    <%= t 'activerecord.attributes.npc.pl' %>
                </th>
                <th></th>
            </tr>
            <% @npc.each do |npc| %>
                <tr data-url="<%= character_path(npc.id) %>">
                    <td>
                        <%= npc.name %>
                    </td>
                    <td>
                        <%= npc.pl_name %>
                    </td>
                    <td>
                        <%= link_to edit_character_path(npc.id) do %>
                            <i class="bi bi-vector-pen"></i>
                        <% end %>
                    </td>
                </tr>
            <% end %>
        </table>
    </div>

    <div>
        <h2><%= t 'activerecord.models.pl' %></h2>
        <table>
            <tr>
                <th>
                    <%= t 'activerecord.attributes.pl.name' %>
                </th>
            </tr>
            <% @pl.each do |pl| %>
                <tr>
                    <td>
                        <%= pl.name %>
                    </td>
                </tr>
            <% end %>
        </table>
    </div>

</div>