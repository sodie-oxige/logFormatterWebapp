<h1><%= t '.title' %></h1>

<%= button_to t('characters.new.title'), new_character_path, method: :get %>

<div class="xflex gap">

    <div>
        <h2><%= t('default.pc') %></h2>
        <table>
            <tr>
                <th>
                    <%= Character.human_attribute_name(:name) %>
                </th>
                <th>
                    <%= Character.human_attribute_name(:pl) %>
                </th>
                <th style="width:calc(60px + 1em)"></th>
            </tr>
            <% @pc.each do |pc| %>
                <tr data-url="<%= character_path(pc.id) %>">
                    <td>
                        <%= pc.name %>
                    </td>
                    <td>
                        <%= pc.pl_name %>
                    </td>
                    <td style="width:calc(60px + 1em)">
                        <%= link_to edit_character_path(pc.id) do %>
                            <i class="bi bi-vector-pen"></i>
                        <% end %>
                    </td>
                </tr>
            <% end %>
        </table>
    </div>

    <div>
        <h2><%= t('default.npc') %></h2>
        <table>
            <tr>
                <th>
                    <%= Character.human_attribute_name(:name) %>
                </th>
                <th>
                    <%= Character.human_attribute_name(:pl) %>
                </th>
                <th style="width:calc(60px + 1em)"></th>
            </tr>
            <% @npc.each do |npc| %>
                <tr data-url="<%= character_path(npc.id) %>">
                    <td>
                        <%= npc.name %>
                    </td>
                    <td>
                        <%= npc.pl_name %>
                    </td>
                    <td style="width:calc(60px + 1em)">
                        <%= link_to edit_character_path(npc.id) do %>
                            <i class="bi bi-vector-pen"></i>
                        <% end %>
                    </td>
                </tr>
            <% end %>
        </table>
    </div>

    <div>
        <h2><%= t('default.pl') %></h2>
        <table>
            <tr>
                <th>
                    <%= User.human_attribute_name(:username) %>
                </th>
            </tr>
            <% @pl.each do |pl| %>
                <tr>
                    <td>
                        <%= pl.name %>
                    </td>
                </tr>
            <% end %>
        </table>
    </div>

</div>